                            </div>

                            <p class="btn-text">Meditations</p>
                          </button>
                        </li>
                        -->

                        <li>
                            <button class="filter-btn" data-filter-btn="Produtos">
                                <div class="btn-icon">
                                    <i class="flaticon-razor-blade" aria-hidden="true"></i>
                                </div>

                                <p class="btn-text">produtos</p>
                            </button>
                        </li>

                    </ul>

                    <!--
                       - #Grid Lists
                      -->
                    <ul class="grid-list">

                        @foreach (var servico in ViewBag.Servicos)
                        {
                            <li data-filter="Acabamentos">
                                <div class="pricing-card">

                                    <figure class="card-banner img-holder" style="--width: 90; --height: 90;">
                                        <img src="@Url.Content(servico.CaminhoImagem)" width="90" height="90" alt="@servico.Nome"
                                             class="img-cover">
                                    </figure>

                                    <div class="Acabamentos">
                                        <h3 class="h3 card-title">@servico.Nome</h3>

                                        <p class="card-text"> 30-50 minutos</p>
                                    </div>

                                    <data class="card-price">R$@servico.Preco</data>

                                    <a href="@Url.Action("Agendar", "Cliente", new { servicoId = servico.Id })" class="button-pricing">Agendar</a>
                                </div>
                            </li>
                        }

                    </ul>

                </div>

            </div>
        </section>





