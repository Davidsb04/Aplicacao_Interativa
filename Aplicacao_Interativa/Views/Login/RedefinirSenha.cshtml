@model RedefinirSenhaModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Redefinir Senha";
}

@if (TempData["MensagemErro"] != null)
{
                        <div class="alert alert-danger" role="alert">
        @TempData["MensagemErro"]
                        </div>  
}

<head>
    <link rel="stylesheet" href="/css/recuperar.css">
    <link rel="stylesheet" href="/css/style.css">
</head>

<div class="recuperar">
    <h2>Redefina sua nova senha</h2>
    <form asp-controller="Login" asp-action="RedefinirSenha" method="post" onsubmit="return validarFormulario()">
        <input type="hidden" asp-for="Usuario" value="@Model.Usuario" />
        <div class="mb-3">
            <input type="password" asp-for="NovaSenha" id="NovaSenha" required class="btn-password" placeholder="Digite sua senha" />
        </div>
        <div class="mb-3">
            <input type="password" asp-for="ConfirmarSenha" id="ConfirmarSenha" required class="btn-password" placeholder="Confirme sua senha" />
            <span id="erroSenha" class="erro-mensagem"></span>
        </div>
        <input type="submit" value="Redefinir">
    </form>
</div>

<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
