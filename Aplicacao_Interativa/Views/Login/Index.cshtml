@model LoginModel
@{	
    Layout = "_LayoutDeslogado";
	ViewData["Title"] = "Login";
}

@if (TempData["MensagemSucesso"] != null)
{
            <div class="alert alert-success" role="alert">
        @TempData["MensagemSucesso"]
            </div>  
}

@if (TempData["MensagemErro"] != null)
{
                    <div class="alert alert-danger" role="alert">
        @TempData["MensagemErro"]
                    </div>  
}

<head>
    <link href="@Url.Content("/css/style.css")" rel="stylesheet"/>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
    href="https://fonts.googleapis.com/css2?family=Oswald:wght@400;500;600;700&family=Rubik:wght@300,400;700&display=swap"
    rel="stylesheet">
    <link href="@Url.Content("/css/flaticon.min.css")" rel="stylesheet"/>
    <link rel="preload" href="@Url.Content("/img/hero-banner.jpg")">
</head>

<main>
    <article>

      <!-- 
        - #HERO
      -->

      <section class="section hero has-before has-bg-image" id="home" aria-label="home"
        style="background-image: url('/img/hero-banner.jpg')">
        <div class="formlogin">

          <div class="container">
            <!-- login -->
            <div class="login">
                  <i class="fas fa-sign-in-alt"></i>
                  <strong>Bem-Vindo!</strong>
                  <span>Entre na sua conta</span>
                  <form asp-controller="Login" asp-action="Entrar" method="post">
                      <div class="form">
                        <div class="form-row">
                            <i class="fas fa-user"></i>
                            <label class="form-label" for="email">E-mail</label>
                            <input type="email" asp-for="Email" required class="form-text" placeholder="Digite seu e-mail"/>   
                        </div>
                        <div class="form-row">
                            <i class="fas fa-eye"></i>
                            <label class="form-label" for="senha">Senha</label>
                            <input type="password" asp-for="Senha" required class="form-text" placeholder="Digite sua senha"/>
                        </div>

                        <div class="form-row bottom">
                              <p class="mb-4 text-sm">                                  
                                 <a asp-controller="Login" asp-action="EsqueciSenha" class="forgot">Esqueceu a senha?</a>
                              </p>
                             <p class="mb-4 text-sm">
                                <a asp-controller="Cadastro" asp-action="Criar" class="forgot">Faça seu cadastro</a>
                             </p>
                        </div>

                        <button type="submit" class="btn btn-primary btn-block w-100 my-1">Entrar</button>
                      </div>                      
                </form>                
            </div>          
      </section>

    </article>
  </main>


  <!-- 
    - js link
  -->
  <script src="/js/home.js" defer></script>

  <!-- 
    - ionicon link
  -->
  <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
  <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>